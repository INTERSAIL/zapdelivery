<%= simple_form_for @outbox, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span4">
          <%= f.input :destinatario %>
          </div>
        <div class="span4">
          <%= f.input :data_invio, :as => :date_picker %>
          </div>
        </div>
        <div class="row-fluid">
          <%= f.input :oggetto %>
          <%= f.input :messaggio %>
          <%= f.input :stato %>
          <%= f.input :data_stato, :as => :date_picker %>
          <%= f.input :risposta %>

        </div>

        </div>
      </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                outboxes_path, :class => 'btn' %>
  </div>
<% end %>
<%- model_class = Outbox -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= table_fixed do %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= d model_class.human_attribute_name(:created_at) %></th>
      <th><%= d model_class.human_attribute_name(:destinatario) %></th>
      <th><%= d model_class.human_attribute_name(:oggetto) %></th>
      <th><%= d model_class.human_attribute_name(:data_invio) %></th>
      <th><%= d model_class.human_attribute_name(:stato) %></th>
      <th><%= d model_class.human_attribute_name(:data_stato) %></th>
      <th><%= d model_class.human_attribute_name(:risposta) %></th>
      <th><%= d model_class.human_attribute_name(:allegato) %></th>

    </tr>
  </thead>
  <tbody>
    <% @outboxes.each do |outbox| %>
      <tr>
        <td><%=l outbox.created_at %></td>
        <td><%= outbox.destinatario %></td>
        <td><%= outbox.oggetto %></td>
        <td><%=l outbox.data_invio, format: :long%></td>
        <td><%= outbox.stato_text %></td>
        <td><%=l outbox.data_stato %></td>
        <td><%= outbox.risposta %></td>
        <td><%= fileAttachmentLinkView outbox.allegato %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_outbox_path,
            :class => 'btn btn-primary' %>

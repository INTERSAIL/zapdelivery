<%= simple_form_for(@shipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :user %>
    <%= f.input :template %>
    <%= f.input :source %>
    <%= f.input :outbox_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

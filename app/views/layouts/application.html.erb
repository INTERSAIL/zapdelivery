<!DOCTYPE html>
<html>
<head>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <title>Zapdelivery</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= javascript_include_tag 'rgraph/RGraph.bar' %>
  <%= javascript_include_tag 'rgraph/RGraph.line' %>
  <%= javascript_include_tag 'rgraph/RGraph.common.core' %>
  <%= javascript_include_tag 'rgraph/RGraph.common.dynamic' %>
  <%= javascript_include_tag 'rgraph/RGraph.common.key' %>
  <%= javascript_include_tag 'rgraph/RGraph.common.tooltips' %>
  <%= javascript_include_tag 'rgraph/RGraph.common.effects' %>

  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">

<div class="navbar navbar-fluid-top" role="navigation" id="topContainer">
  <div class="navbar-inner">

    <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>

    <%= link_to image_tag("logoIntersail.png", alt: "Intersail Website", class: "brand"), '#' , class: "span2" , style: "width: 14.5299%" %>

    <div class="nav-collapse container-fluid">


      <%= render 'layouts/login_items' %>

    </div><!--/.nav-collapse -->





  </div>

</div>

<%= bootstrap_flash %>

<div class="container-fluid" id="middleContainer">
  <div class="row-fluid" id="main">

    <%= yield %>

  </div><!--/row-->

    <div class="row-fluid">
      <div class="span8 offset4">
        <div class="span8">
          <footer>
            <%= link_to image_tag("logo_poste.jpg", alt: "ZapDelivery"), '#' , class: "span2"  %>
            <p>&copy; <%= link_to 'Intersail 2013', 'http://www.intersail.it/', target: "_blank" %> - ZapDelivery <%= ZAPDELIVERY_CONFIG['versione'] %></p>
          </footer>
        </div>
      </div>
    </div>

  </div> <!-- /container -->



<%= render 'layouts/modal' %>


<script  type="text/javascript">
    $('.datepicker').datepicker({language: 'it-IT', autoclose:true});
</script>

</body>
</html>
